# Database Configuration
# Option 1: Use external Neon database (recommended for production)
DATABASE_URL=postgresql://username:password@host.neon.tech:5432/dbname?sslmode=require

# Option 2: Use local PostgreSQL in Docker (for development)
# DATABASE_URL=postgresql://postgres:postgres@db:5432/ar_automation
POSTGRES_DB=ar_automation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
LANGCHAIN_API_KEY=your-langchain-api-key-here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=ar-automation

# Email Service Configuration (Resend)
RESEND_API_KEY=your-resend-api-key-here
INTERNAL_NOTIFICATION_EMAIL=team@arautomation.com

# Application Environment
ENVIRONMENT=production
NODE_ENV=production

# Port Configuration
FRONTEND_PORT=80
BACKEND_PORT=8000

# Optional: If you want to expose PostgreSQL externally
# POSTGRES_PORT=5432
